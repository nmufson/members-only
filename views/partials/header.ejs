<header>
  <div><h1>Members Only</h1></div>
  <div>
    <% if (!user) { %>
    <!-- User is not logged in -->
    <nav id="notLoggedInHeaderNav">
      <a href="/log-in" class="button">Log In</a>
      <a href="/sign-up" class="button">Sign Up</a>
      <a href="/" class="button">Home</a>
    </nav>
    <% } else if (user && !user.membership_status) { %>
    <!-- User is logged in but not a member -->
    <div id="loggedInHeaderDiv">
      <h2>Welcome, <%= user.first_name %>!</h2>
      <nav>
        <a href="/" class="button">Home</a>
        <a href="/member-join" class="button">Join Club</a>
        <button id="openLogOutModalButton">Log Out</button>
      </nav>
    </div>
    <% } else { %>
    <!-- User is logged in and a member -->
    <div id="loggedInAndMemberHeaderDiv">
      <h2>Welcome, <%= user.first_name %>!</h2>
      <nav>
        <a href="/" class="button">Member Home</a>
        <button id="openLogOutModalButton">Log Out</button>
      </nav>
    </div>
    <% } %>
  </div>
</header>
