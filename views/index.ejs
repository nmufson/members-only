<div
  id="create-message-btn-div"
  style="
    <%=(formErrors && formErrors.length > 0)? 'display: none;' : 'display: block;'
      %>;
  "
>
  <% if (user) { %>
  <button id="create-message-btn">Create Message</button>
  <% } else { %>
  <h2 class="log-in-alert-header">Log In to Send Messages</h2>
  <% } %>
</div>

<div
  id="send-message-form-container"
  style="
    <%=(formErrors && formErrors.length > 0)? 'display: block;' : 'display: none;'
      %>;
  "
>
  <form action="/send-message" id="send-message-form" method="POST">
    <fieldset>
      <legend>Send New Message</legend>

      <!-- Display form validation errors if any -->
      <% if (formErrors && formErrors.length > 0) { %>
      <div class="error">
        <ul>
          <% formErrors.forEach(function(error) { %>
          <li><%= error.msg %></li>
          <% }); %>
        </ul>
      </div>
      <% } %>

      <!-- Message input field -->
      <textarea
        name="message"
        placeholder="Write your message here..."
        maxlength="250"
      ></textarea>

      <div class="form-actions">
        <button id="close-form-btn" type="button">Close</button>
        <button type="submit">Submit</button>
      </div>
    </fieldset>
  </form>
</div>

<div class="messages-container">
  <h2>Messages</h2>
  <div>
    <ul>
      <% if (messages && messages.length > 0) { %> <%
      messages.forEach(function(message) { %>
      <li
        class="<%= user ? (user.membership_status ? 'member message' : 'basic message') : 'basic message' %> <%= user && message.user_id === user.id ? 'self' : 'other' %>"
      >
        <div>
          <div class="topMessageDiv">
            <div>
              <strong
                ><%= message.first_name %> <%= message.last_name %></strong
              >
            </div>
            <div class="deleteMessageDiv">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                class="delete-icon"
                id="<%= message.message_id %>"
                style="display: <%= !user || !user.is_admin ? 'none' : 'block' %>;"
              >
                <title>delete</title>
                <path
                  d="M18,19C18,20.66 16.66,22 15,22H8C6.34,22 5,20.66 5,19V7H4V4H8.5L9.5,3H13.5L14.5,4H19V7H18V19M6,7V19C6,20.1 6.9,21 8,21H15C16.1,21 17,20.1 17,19V7H6M18,6V5H14L13,4H10L9,5H5V6H18M8,9H9V19H8V9M14,9H15V19H14V9Z"
                />
              </svg>
            </div>
          </div>
          <p><%= message.message_content %></p>
          <div class="bottomMessageDiv">
            <small>Sent:</small>
            <small>
              <%= message.formattedTime %> - <%= message.formattedDate %></small
            >
          </div>
        </div>
      </li>
      <% }) %> <% } else { %>
      <p>No messages yet.</p>
      <% } %>
    </ul>
  </div>
</div>
